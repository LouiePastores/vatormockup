<%= form_for(@competition, :remote => true) do |f| %>
  <div class="competition-form">
    <div class="form-group">
      <% if @competition.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@competition.errors.count, "error") %> prohibited this competition from being saved:
          </h2>

          <ul>
            <% @competition.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control col-sm-4' %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <%= image_tag @competition.image.url(:preview), :class => "img-responsive" %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_area :description, class: 'form-control', :rows => 6  %>
      </div>
      <div class="field" style="position: relative">
        <%= f.label :start_date %><br />
        <%= f.text_field :start_date, class: 'form-control', :required => true%>
      </div>
      <div class="field" style="position: relative">
        <%= f.label :end_date %><br />
        <%= f.text_field :end_date, class: 'form-control', :required => true%>
      </div>
      <div class="field">
        <%= f.label :category %><br />
        <%= f.text_field :category_list, class: 'form-control' %>
      </div>
      <!-- <div class="field">
        <%= f.label :is_featured %>
        <%= f.check_box :is_featured, class: 'form-check-input' %>
      </div> -->
        <center><%= f.submit class: 'btn btn-primary'%></center>
    </div>
  </div>
<% end %>
<div class="actions">
  <center>
    <div class="footer">
      <%= link_to list_competition_path do%>
        <button class="btn btn-seconday footer-button">
          Back to List
        </button>   
      </div>
      <%end%>
  </center>
</div>
